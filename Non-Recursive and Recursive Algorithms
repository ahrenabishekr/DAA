def non_recursive_factorial(n):
    result = 1
    for i in range(1, n + 1):
        result *= i
    return result

# Recursive Algorithm
def recursive_factorial(n):
    if n == 0:
        return 1
    else:
        return n * recursive_factorial(n - 1)

# Test the Algorithms
n = 5
print(f"Non-Recursive Factorial of {n}: {non_recursive_factorial(n)}")
print(f"Recursive Factorial of {n}: {recursive_factorial(n)}")
